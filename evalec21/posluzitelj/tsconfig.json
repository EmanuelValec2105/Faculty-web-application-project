{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["/usr/lib/node_modules/@types/", "node_modules/@types"],
      "paths": {
        "*": ["/usr/lib/node_modules/@types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}